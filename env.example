# Application Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/hba-foundation
MONGODB_TEST_URI=mongodb://localhost:27017/hba-foundation-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@hbafoundation.org

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Admin Configuration
ADMIN_EMAIL=admin@hbafoundation.org
ADMIN_PASSWORD=change-this-secure-password

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE=logs/application.log

# Security
BCRYPT_ROUNDS=12
COOKIE_SECRET=your-cookie-secret-change-this

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs 